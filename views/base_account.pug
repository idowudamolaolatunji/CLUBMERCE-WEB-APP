                    -else
                        span
                            .nav__image--box
                                //- img.nav__image(class=`${user.role === 'vendor' && user.vendorAccountType ? 'vendor--type' : ''}` type=`${user.role === 'vendor' ? user.vendorAccountType : ''}` src=`/asset/img/users/${user.image}` alt=`user's photo`)
