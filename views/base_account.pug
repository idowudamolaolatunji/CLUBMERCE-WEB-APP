DOCTYPE
html(lang="en")

head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer")
    //- link(rel="favicon" href="")

    //- STYLES 
    link(rel="stylesheet" href="src/css/general.css")
    link(rel="stylesheet" href="src/css/dashboard.css")
    link(rel="stylesheet" href="src/css/query_dashboard.css")


    title=title
body

    section.section__dashboard
        .section__top
            .nav__logo
                i.fa-solid.fa-close.icon.nav__icon.menubar-control.menu-closed
                i.fa-solid.fa-bars.icon.nav__icon.menubar-control.menu-opened.hidden
                img.logo(src='../../asset/img/logo-removebg.png' alt='clubmerce logo')
                img.logo-small(src='../../asset/img/favicon.png' alt='clubmerce logo')
            nav.navbar
            
                if section === 'marketplace'
                    form.nav__search
                        input.nav__input(type='search' placeholder='search...')
                        button.search__button(type='submit')
                            i.fa-solid.fa-magnifying-glass.icon.nav__icon

                span.nav__icons
                    span.notification__icon
                        i.fa-regular.fa-bell.icon.nav__icon
                        .notification__hovered.hidden 
                            h3.dashboard__heading Notification
                            p.notification__amount New (0)
                                .notification__content 
                                    span.notice 
                                | you have no notification

                    span
                        img.nav__image(src='../../asset/img/face.png' alt="customer's dashboard photo")
                        .Profile__hovered.hidden
                            .profile__content
                                .profile__owner
                                    img.profile__image(src="../../asset/img/face.png", alt="customer's dashboard photo")
                                    p.profile__name idowu olatunji
                                a.profile__link.nav__link(href="/profile") My profile
                                button.profile__button.nav__link#logout signout&nbsp;
                                    i.fa-solid.fa-arrow-right-to-bracket.profile__icon


        mixin menuItem(link, text, icon, active, target)                    
            li(class=`${active ? 'menu__item menu__active' : 'menu__item'}`)
                a.menu__link(href=`/${link}` #{target})
                    i.icon.menu__icon(class=`${icon}`)
                    p #{text}

        .section__bottom
            menu.menubar
                .menu__body
                    ul.menu__list
                        //- -if(user.role === 'affiliate')
                            +menuItem('affiliate-dashboard', 'Dashboard', 'fa-solid fa-gauge', false)
                            +menuItem('marketplace', 'Affiliate Marketplace', 'fa-solid fa-shop', false, target="_blank")
                            +menuItem('affiliate-performance', 'My Performance', 'fa-solid fa-chart-simple', false)
                            +menuItem('affiliate-transaction', 'Transactions', 'fa-solid fa-chart-line', false)
                            +menuItem('settings', 'settings', 'fa-solid fa-gear', false)

                        //- -if(user.role === 'vendor')
                            +menuItem('vendor-dashboard', 'Dashboard', 'fa-solid fa-gauge', true)
                            +menuItem('product-catalog', 'Product Catalog', 'fa-regular fa-clipboard-list-check', false)
                            +menuItem('vendor-performance', 'Product Performance', 'fa-solid fa-chart-simple', false)
                            +menuItem('vendor-transaction', 'Transactions', 'fa-solid fa-chart-line', false)
                            +menuItem('settings', 'settings', 'fa-solid fa-gear', false)

                        //- -if(user.role !== 'admin')
                            .menu__bottom
                                ul.menu__list
                                    li.menu__item
                                        a.menu__link(href="/profile")
                                            img.menu__profile-image(src='../../asset/img/face.png')
                                            | profile
                                    li.menu__item
                                        a.menu__button(href='/login')
                                            | signout&nbsp;
                                            i.fa-solid.fa-arrow-right-to-bracket

                        //- -if(user.role === 'admin')
                        +menuItem('all-performance', 'All perfomance', 'fa-solid fa-chart-simple', false)
                        +menuItem('product-marketplace', 'Product Marketplace', 'fa-solid fa-clipboard-list', false)
                        +menuItem('admin-settings', 'Admin settings', 'fa-solid fa-gear', false)

                //- -if(user.role === 'admin')
                .menu__bottom
                    ul.menu__list
                        li.menu__item
                            a.menu__link(href="/manage-users") 
                                i.fa-solid.fa-users.icon.menu__icon
                                | Manage Users
                        li.menu__item
                            a.menu__link(href="/manage-products") 
                                i.fa-solid.fa-gift.icon.menu__icon
                                | Manage Products
                        li.menu__item
                            a.menu__link(href="/manage-payment")
                                i.fa-solid.fa-shopping-cart.icon.menu__icon
                                | Manage Payments
                        li.menu__item
                            a.menu__link(href='/login') 
                                i.fa-solid.fa-arrow-right-to-bracket.icon.menu__icon
                                | signout&nbsp;
               
                //- .menu__bottom
                //-     ul.menu__list
                //-         li.menu__item
                //-             a.menu__link(href="/profile")
                //-                 img.menu__profile-image(src='../../asset/img/face.png')
                //-                 | profile
                //-         li.menu__item
                //-             button.menu__button#logout
                //-                 | signout&nbsp;
                //-                 i.fa-solid.fa-arrow-right-to-bracket
            main.main__dashboard
                .dashboard__content
                    block content

                include _auth_footer

    script( src="src/js/index.js")