DOCTYPE
html(lang="en")

head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer")
    //- link(rel="favicon" href="")

    //- STYLES 
    link(rel="stylesheet" href="src/css/general.css")
    link(rel="stylesheet" href="src/css/dashboard.css")
    link(rel="stylesheet" href="src/css/query_dashboard.css")


    title=title
body

    section.section__dashboard
        .section__top
            .nav__logo
                i.fa-solid.fa-close.icon.nav__icon.menubar-control.menu-closed
                i.fa-solid.fa-bars.icon.nav__icon.menubar-control.menu-opened.hidden
                img.logo(src='asset/img/logo-removebg.png' alt='clubmerce logo')
                img.logo-small(src='asset/img/favicon.png' alt='clubmerce logo')
            nav.navbar
            
                - if(section === 'marketplace')
                    form.nav__search
                        input.nav__input(type='search' placeholder='search...')
                        button.search__button(type='submit')
                            i.fa-solid.fa-magnifying-glass.icon.nav__icon

                span.nav__icons
                    span.notification__icon
                        i.fa-regular.fa-bell.icon.nav__icon
                        //- notification...
                        .notification__hovered.hidden 
                            h3.dashboard__heading Notification
                            p.notification__amount New (0)
                                .notification__content 
                                    span.notice 
                                | you have no notification

                    span
                        img.nav__image(src=`asset/img/${user.image}.png` alt=`customer's (${user.username}) photo`)
                        //- profile...
                        .Profile__hovered.hidden
                            .profile__content
                                .profile__owner
                                    img.profile__image(src=`asset/img/${user.image}.png` alt=`customer's (${user.username}) photo`)
                                    p.profile__name= user.fullName
                                a.profile__link.nav__link(href="/profile") My profile
                                button.profile__button.nav__link#logout signout&nbsp;
                                    i.fa-solid.fa-arrow-right-to-bracket.profile__icon


        mixin menuItem(link, text, icon, active)                    
            li(class=`${active ? 'menu__item menu__active' : 'menu__item'}`)
                a.menu__link(href=`/${link}`)
                    i.icon.menu__icon(class=`${icon}`)
                    p #{text}

        .section__bottom
            menu.menubar
                .menu__body
                    ul.menu__list
                        -if(user.role === 'affiliate')
                            +menuItem('dashboard', 'Dashboard', 'fa-solid fa-gauge', false)
                            +menuItem('marketplace', 'Affiliate Marketplace', 'fa-solid fa-shop', false)
                            +menuItem('affiliate-performance', 'My Performance', 'fa-solid fa-chart-simple', false)
                            +menuItem('affiliate-transaction', 'Transactions', 'fa-solid fa-chart-line', false)
                            +menuItem('settings', 'settings', 'fa-solid fa-gear', false)

                        -if(user.role === 'vendor')
                            +menuItem('dashboard', 'Dashboard', 'fa-solid fa-gauge', false)
                            +menuItem('product-catalog', 'Product Catalog', 'fa-solid fa-clipboard-list', false)
                            +menuItem('vendor-performance', 'Product Performance', 'fa-solid fa-chart-simple', false)
                            +menuItem('vendor-transaction', 'Transactions', 'fa-solid fa-chart-line', false)
                            +menuItem('settings', 'settings', 'fa-solid fa-gear', false)

                        -if(user.role === 'admin')
                            +menuItem('all-performance', 'All perfomance', 'fa-solid fa-chart-simple', false)
                            +menuItem('product-marketplace', 'Product Marketplace', 'fa-solid fa-clipboard-list', false)
                            +menuItem('admin-settings', 'Admin settings', 'fa-solid fa-gear', false)

                -if(user.role === 'admin')
                    .menu__bottom 
                        ul.menu__list 
                            li.menu__item 
                                a.menu__link(href="/manage-users") 
                                    i.fa-solid.fa-users.icon.menu__icon
                                    | Manage Users
                            li.menu__item
                                a.menu__link(href="/manage-products") 
                                    i.fa-solid.fa-gift.icon.menu__icon
                                    | Manage Products
                            li.menu__item
                                a.menu__link(href="/manage-payment")
                                    //- i.fa-solid.fa-shopping-cart
                                    i.fa-solid.fa-credit-card.icon.menu__icon
                                    | Manage Payments
                            li.menu__item
                                a.menu__link#logout
                                    i.fa-solid.fa-arrow-right-to-bracket.icon.menu__icon
                                    | signout&nbsp;
               
                -else 
                    .menu__bottom
                        ul.menu__list
                            li.menu__item
                                a.menu__link(href="/profile")
                                    //- img.menu__profile-image(src='asset/img/face.png')
                                    img.menu__profile-image(src=`asset/img/${user.image}.png` alt=`customer's (${user.username}) photo`)
                                    | profile
                            li.menu__item
                                button.menu__button#logout
                                    | signout&nbsp;
                                    i.fa-solid.fa-arrow-right-to-bracket
            main.main__dashboard
                .dashboard__content
                    block content
                        -if(user.role === 'affiliate')
                            .main__dashboard--container
                                h3.dashboard__heading=`Welcome back, ${user.fullName.split(' ')[0]}`
                                .dashboard__insights 
                                    .insight.insight__one
                                        span 
                                            p.insignt__text=`â‚¦ ${user.wallet}`
                                            i.fa-solid.fa-coins.insight__icon
                                        p.insignt__title Total enarned

                                    .insight.insight__two
                                        span 
                                            p.insignt__text= user.productSold
                                            i.fa-solid.fa-comments-dollar.insight__icon
                                        p.insignt__title Product Sold

                                    .insight.insight__three
                                        span
                                            p.insignt__text= user.clicks
                                            i.fa-solid.fa-up-right-from-square.insight__icon
                                        p.insignt__title Links clicks

                                    .insight.insight__four
                                        span
                                            p.insignt__text= user.affiliateUrl.length
                                            i.fa-solid.fa-bullhorn.insight__icon
                                        p.insignt__title Promotions

                                .dashboard__table
                                    <div class="table">
                                        <div class="table-title">
                                            <h4 class="table-heading">Recent commission</h4>
                                            <i class="fa-silid fa-vertical-dots table__icon"></i>
                                        </div>
                                        <div class="table-head">
                                            <span class="table-head-content">Product</span>
                                            <span class="table-head-content">Commission amount</span>
                                            <span class="table-head-content">Status</span>
                                            <span class="table-head-content">date</span>
                                        </div>


                                        //- <div class="table-row">
                                            <span class="table-row-content table-row-product">
                                                <img class="table-product__image" src="../product.jpg" alt="" />
                                                <span>
                                                    <p class="table-product__name">Test product 2</p>
                                                    <p class="table-product__niche">E-books</p>
                                                </span>
                                            </span>
                                            <span class="table-row-content"><p class="price">$&nbsp;90</p></span>
                                            <span class="table-row-content"><p class="status status--pending">pending</p></span>
                                            <span class="table-row-content"><p class="date">12/02/23</p></span>
                                        //- </div>
                                        <div class="table-row-message">
                                            p.note-no You've have not made any sale commission...
                                        </div>
                                    </div>
                            

                        -if(user.role === "vendor")
                            .main__dashboard--container
                                h3.dashboard__heading=`Welcome back, ${user.fullname} vendor`
                                .dashboard__insights 
                                    .insight.insight__one
                                        span 
                                            p.insignt__text=`â‚¦ ${user.wallet}`
                                            i.fa-solid.fa-comments-dollar.insight__icon
                                        p.insignt__title My profit

                                    .insight.insight__two
                                        span 
                                            //- p.insignt__text= user.product
                                            p.insignt__text 0
                                            //- i.fa-solid.fa-bag.insight__icon
                                            i.fa-solid.fa-list-check.insight__icon
                                        p.insignt__title My Products

                                    .insight.insight__three
                                        span
                                            p.insignt__text 0
                                            i.fa-solid.fa-shopping-cart.insight__icon
                                        p.insignt__title Orders

                                    .insight.insight__four
                                        span
                                            p.insignt__text 20
                                            i.fa-solid.fa-bullhorn.insight__icon
                                        p.insignt__title Affiliate Gravity
                                        

                                .dashboard__table
                                    <div class="table table-po">
                                        <div class="table-title">
                                            <h4 class="table-heading">Product orders</h4>
                                        </div>
                                        <div class="table-head-po">
                                            <span class="table-head-content">Product</span>
                                            <span class="table-head-content">orders</span>
                                            <span class="table-head-content">Total price</span>
                                            <span class="table-head-content">location</span>
                                            <span class="table-head-content">status</span>
                                        </div>

                                        //- <div class="table-row-po">
                                            <span class="table-row-content table-row-product">
                                                <img class="table-product__image" src="../product.jpg" alt="" />
                                                <span>
                                                    <p class="table-product__name">Test product 1</p>
                                                    <p class="table-product__niche">health & fitness</p>
                                                </span>
                                            </span>
                                            <span class="table-row-content"><p class="order">5</p></span>
                                            <span class="table-row-content"><p class="price">$&nbsp;120</p></span>
                                            <span class="table-row-content"><p class="brand">Nigeria</p></span>
                                            <span class="table-row-content"><p class="status status--success">success</p></span>
                                        //- </div>

                                        <div class="table-row-message">
                                            p.note-no You've no order at the moment...</div>
                                    </div>

                        -if(user.role == "admin")
                            p this is the admin

                include _auth_footer

    script( src="src/js/index.js")