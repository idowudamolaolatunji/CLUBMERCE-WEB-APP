extends base_account 

block content 
    .dashboard__table
        .table.table-mp
            .table-title
                h4.table-heading Manage Transactions
            .table-head-mp
                span.table-head-content transaction ID
                span.table-head-content user
                span.table-head-content amount
                span.table-head-content purpose
                span.table-head-content status
                span.table-head-content actions


           

            -if(transactions.length > 0)
                each transaction of transactions
                    .table-row-mp
                        span.table-row-content
                            p.transaction= transaction.transactionId
                        span.table-row-content
                            p.user= transaction.user.username
                        span.table-row-content
                            p.price= `â‚¦${transaction.amount}`
                        span.table-row-content
                            p.purpose= transaction.purpose
                        span.table-row-content
                            //- p(class=`.approved.status.status--${}`) Approved
                            p.approved.status.status--success success
                        span.table-row-content
                            p.date= transaction.createdAt
                        //- span.table-row-content.table-row-btn
                            button.btn-edit.table-btn Approved
                            button.btn-delete.table-btn Unapproved
        
            - else 
                .table-row-message
                    p.note-no No availiable transaction

